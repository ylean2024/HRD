<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/list_item_disk.xml -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/SkyBlue"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageViewPeople"
        android:layout_width="150dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/NameAndSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1231232131"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/imageViewPeople"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NameAndSurname"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/GrayForFilter"
        android:layout_toEndOf="@id/imageViewPeople"
        android:fontFamily="sans-serif-light"
        android:text="123123213111"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/PostAndAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Email"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="265dp"
        android:layout_toEndOf="@+id/imageViewPeople" />
</RelativeLayout>
